<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/grad_bg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/banner_container"

    android:padding="12dp"
    android:background="@drawable/grad_bg"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgView_logo"
                android:layout_width="120dp"
                android:layout_height="116dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/edd"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingBottom="10dp"
                android:text="Where did you hear about us?"
                android:textColor="@color/purple_200"
                android:textSize="28sp"
                app:fontFamily="@font/josen" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioOwn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social Media"
                    android:buttonTint="@color/white"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:fontFamily="@font/josen" />


            <RadioButton
                android:id="@+id/radioOwn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By searching On Playstore"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:buttonTint="@color/white"
                app:fontFamily="@font/josen" />
            </RadioGroup>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Do you have any outstanding loans?"
                android:textColor="@color/purple_200"
                android:textSize="28sp"
                app:fontFamily="@font/josen" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioOwn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:buttonTint="@color/white"
                    app:fontFamily="@font/josen" />


            <RadioButton
                android:id="@+id/radioOwn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No "
                android:buttonTint="@color/white"
                android:textColor="@color/colorWhite"
                app:fontFamily="@font/josen" />
            </RadioGroup>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/curve_bg_btncolor"
                    android:onClick="back"
                    android:text="Back"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/curve_bg_btncolor"
                    android:onClick="next2"
                    android:text="Next"
                    android:textColor="@android:color/background_light" />
            </TableRow>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:orientation="horizontal" />
</RelativeLayout>
